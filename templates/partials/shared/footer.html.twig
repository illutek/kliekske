{#
/**
 * Footer region on page and page--front
 */
 #}

<footer class="footer">
  <div class="footer__left">
    <div class="footer__left-bcg-image">
      <img src="{{ base_path ~ directory }}/dist/images/sponsor_img.png" alt="sponsor afbeelding">
    </div>

    <div class="footer__left__msg">
      {{ "Jouw logo bij de sponsors?"|t }}
      <br>
      <a href="{{ path('<front>') }}#section-contact-smooth">{{ "Contacteer ons."|t }}</a>
    </div>

    <div class="footer__left__footnote">

      <div class="icon--copy">
        {{ site_name }} | {{ "now"|date("Y") }} | <a href="{{ base_path }}privacy-verklaring">Privacy</a>
      </div>

      <div class="footer__left__social">
        <a href="https://www.facebook.com/kliekske" class="social-icon">
          <span class="icon-brands--facebook">&nbsp</span>
        </a>
      </div>

    </div>

  </div>

  <div class="footer__right-sponsors">
    <div class="panel panel--red">
      <h3 class="heading-tertiary">{{ "Onze sponsors" |t }}</h3>
      <div class="sponsors__logos--footer">
        {{ page.footersponsors }}
      </div>
    </div>
  </div>

</footer>
