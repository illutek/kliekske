<section class="cards">
  <div class="row wow fadeIn" data-wow-duration="3s">
    <div class="cards__wrapper">
      <div class="card card__one">
        <i class="card__icons">
          <img src="{{ base_path ~ directory }}/images/cinema.png" alt="theater icoon">
        </i>
        <h3 class="heading-tertiary">{{ "Programma"|t }}</h3>

          {{ page.program }}

      </div>

      <div class="card card__two">
        <i class="card__icons">
          <img src="{{ base_path ~ directory }}/images/theater-masks.png" alt="Theater maskers icoon">
        </i>
        <h3 class="heading-tertiary">{{ "Spelende leden"|t }}</h3>

        <article class="card__content">
          <p class="card__paragraph">

              {{ "Een enthousiaste groep vrienden. Ons doel is humor brengen"|t }}

          </p>
          <a href="{{ base_path }}spelende-leden" class="btn btn--blue">{{ "Lees verder"|t }}</a>
        </article>

      </div>

      <div class="card card__three">
        <i class="card__icons">
          <img src="{{ base_path ~ directory }}/images/piggy-bank.png" alt="Spaatv/arken icoon">
        </i>
        <h3 class="heading-tertiary">{{ "Hoe sponseren"|t }}</h3>

        <article class="card__content">
          <p class="card__paragraph">
              {{ "Wenst u ons te sponseren, dan kan dat op volgende wijze:"|t }}

          </p>
          <a href="{{ base_path }}hoe-sponseren" class="btn btn--red">{{ "Lees verder"|t }}</a>
        </article>

      </div>
    </div>

  </div>
</section>